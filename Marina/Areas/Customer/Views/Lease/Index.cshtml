@model List<Lease>

@{
    ViewData["Title"] = "My Slips";
}

<h2 class="text-center my-4">My Slips</h2>

<div class="container">
    <div class="row">
        @foreach (var lease in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-primary text-white text-center">
                        <h5 class="my-2">Slip @lease.Slip.ID</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Width:</strong> @lease.Slip.Width ft</p>
                        <p><strong>Length:</strong> @lease.Slip.Length ft</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Remove"
                           asp-controller="Lease"
                           asp-area="Customer"
                           asp-route-id="@lease.ID"
                           class="btn btn-danger">
                            Remove
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
